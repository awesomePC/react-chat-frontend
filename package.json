{
  "name": "sample-chat-frontend",
  "version": "0.0.0",
  "description": "A sample real-time chat built on React",
  "private": true,
  "engines": {
    "node": ">=12.18.0",
    "npm": ">=6.14.0"
  },
  "scripts": {
    "start": "webpack-dev-server --config configs/webpack/config.webpack.development.js",
    "build:dev": "webpack --config configs/webpack/config.webpack.development.js",
    "build:prod": "webpack --config configs/webpack/config.webpack.production.js",
    "serve:app": "ws -d dist/ --spa index.html --https",
    "test": "jest",
    "lint:check": "npm run lint:prettier:check . && npm run lint:tsc:check && npm run lint:eslint:check .",
    "lint:write": "npm run lint:prettier:write . && npm run lint:eslint:write .",
    "lint:prettier:check": "prettier --check",
    "lint:prettier:write": "prettier --write",
    "lint:tsc:check": "tsc --noEmit",
    "lint:eslint:check": "eslint --ext .ts,.tsx",
    "lint:eslint:write": "eslint --ext .ts,.tsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/goooseman/sample-chat-frontend.git"
  },
  "keywords": [
    "react",
    "chat",
    "socket.io",
    "cdd",
    "tdd"
  ],
  "author": "goooseman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/goooseman/sample-chat-frontend/issues"
  },
  "homepage": "https://github.com/goooseman/sample-chat-frontend#readme",
  "dependencies": {
    "autoprefixer": "^9.8.0",
    "clsx": "^1.1.1",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-custom-properties": "^9.1.1",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^9.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "local-web-server": "^4.2.0",
    "prettier": "^2.0.5",
    "webpack-dev-server": "^3.11.0"
  }
}
