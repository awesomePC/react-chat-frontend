{
  "compilerOptions": {
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./@types"],
    "isolatedModules": true,
    "target": "es5",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
